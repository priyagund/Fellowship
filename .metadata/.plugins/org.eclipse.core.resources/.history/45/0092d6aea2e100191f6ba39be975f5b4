	}

	@Override
	public void saveAddressBook(List<Person> listOfPerson) throws JsonParseException, JsonMappingException, IOException {
		// TODO Auto-generated method stub
		mapper.writeValue(new File("E:\\Project_Web\\AddressBook\\src\\com\\bridgelaz\\addressbook\\JsonFile\\personAddressBook.json"), listOfPerson);
	
	}

