package com.bridgelabz.algorithm;
import java.util.*;
public class BinaryConversion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the Number");
		int num=sc.nextInt();
		int[] a=new int[32];
		int i=31;
		
		while(num>0)
		{
			a[i]=num%2;
			num=num/2;
			i--;
		}
	}

}
